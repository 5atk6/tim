<div>
  <form action="/event/add" method="post">
    <div>
      <div>
        <div class="form-group">
          <label for="title">Title</label>
          <input name="title" class="form-control" id="title" placeholder="title">
        </div>
        <div class="form-group">
          <label for="content">Content (max 300 characters)</label>
          <textarea name="content" class="form-control" id="content" rows="3" maxlength='300' onkeyup="ShowLength(value);"></textarea>
          <p id="inputlength">0 characters</p>
        </div>
        <div class="form-group">
          <label for="venue">Venue</label>
          <input name="venue" class="form-control" id="venue" placeholder="venue">
        </div>
        <div class="form-group">
          <label for="start_time">Start Time</label>
          <input name="start_time" class="form-control" id="start_time" placeholder="start time">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </div>
  </form>
</div>