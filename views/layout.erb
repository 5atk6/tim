</head>

<body>
  <div class="container">
    <nav class="navbar navbar-inverse" style="background: #ffffff">
      <div class="container-fluid">
        <div class="navbar-header">
          <h1><a class="navbar-brand" href="/">TIM - Tsukuba International Matome</a></h1>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if !current_user.nil? %>
            <li>Hello <%= current_user.mail %></li>
            <li><a href="/signout">Sign Out</a></li>
          <% else %>
            <li>Do you have account?</li>
            <li><a href="/signin"><img src="/assets/svg/account-login.svg" alt="login">Sign In</a></li>
            <li><a href="/signup">Sign Up</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </div>
</body>

