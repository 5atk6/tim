<div>
  <form action="/opinion" method="post">
    <div>
      <div>
        <div class="form-group">
          <label for="comment"><h2>Opinion and Advices</h2></label>
          <textarea name="comment" class="form-control" id="comment" rows="3"></textarea>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<% @opinions.each do |opinion| %>
  <div class="card bg-info" style="margin: 10px">
    <div class="card-block">
      <p><%= opinion.comment %></p>
    </div>
  </div>
<% end %>  

<hr>

<div>
  <form action="/idea" method="post">
    <div>
      <div>
        <div class="form-group">
          <label for="title"><h2>Title Idea</h2></label>
          <input name="title" class="form-control" id="title" placeholder="title">
        </div>
        <div class="form-group">
          <label for="comment">Comment</label>
          <textarea name="comment" class="form-control" id="comment" rows="3"></textarea>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<% @ideas.each do |idea| %>
  <div class="card" style="margin-top: 10px;">
    <div class="card-header bg-info text-white">
      <%= idea.title %>
    </div>
    <div class="card-body bg-light">
      <p class="card-text"><%= idea.comment %></p>
    </div>
    <div class="card-footer">
      <span><%= idea.good %></span>
      <span>
        <form action="/idea/good/<%= idea.id %>" method="post">
          <button type="submit" class="btn btn-warning">Goodüëç</button>
        </form>
      </span>    
    </div>
  </div>
<% end %>