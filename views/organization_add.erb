<div>
  <form action="/organization/add" method="post">
    <div>
      <div>
        <div class="form-group">
          <label for="organization_name">Organization Name</label>
          <input name="name" class="form-control" id="name" placeholder="organization name">
        </div>
        <div class="form-group">
          <label for="content">Content(max 300 characters)</label>
          <textarea name="content" class="form-control" id="content" rows="3" maxlength='300' onkeyup="ShowLength(value);"></textarea>
          <p id="inputlength">0 characters</p>
        </div>
        <div class="form-group">
          <label for="url">URL</label>
          <input name="url" class="form-control" id="url" placeholder="URL">
        </div>
        <div class="form-group">
          <label for="category">Category</label><br>
          <select name="category" id="category">
            <% @categories.each do |category| %>
              <option value="<%= category.id %>"><%= category.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </div>
  </form>
</div>